     <property name="order" value="0" />
  </bean> -->
  <mvc:resources mapping="/resources/**" location="/assets/" /> 
  
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/views/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
		<property name="order" value="1" />
	</bean>
	<context:property-placeholder location="classpath:app.properties"/>
	<bean id="applicationContextProvder"
                        class="com.coderszone.context.ApplicationContextProvider"/>
 	<!-- <util:properties id="props" location="classpath:resources/app.properties" /> -->
</beans>